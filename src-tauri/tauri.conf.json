{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "thosts",
  "version": "0.1.0",
  "identifier": "dev.tairanla.thosts",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "thosts",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": ["en-US", "zh-CN", "zh-TW"]
      },
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English", "SimpChinese", "TradChinese"]
      }
    }
  }
}